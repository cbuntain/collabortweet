//- index.pug
doctype html
html
	head
		include includes/head.pug
	body
		include includes/nav.pug

		<!-- Main jumbotron -->
		div(class="jumbotron")
			div(class="container")
				h2 Select the task to export.
		
		//- Display options
		div(class="container")
			if dataMap.pairTasks.length > 0
				h2 Available Comparison Tasks:
				each v in dataMap.pairTasks
					div(class="row")
						div(class="panel panel-default")

							div(class="panel-heading") 
								h4 
									Task #{v.taskId}: #{v.taskName}
										ul.list-unstyled
											li
												a.text-white(href="/json/" + v.taskId) JSON
											li
												a.text-white(href="/csv/" + v.taskId) CSV

							div(class="panel-body")
								p Comparisons Answered: #{v.counter}
								p #{v.question}

			if dataMap.labelTasks.length > 0
				h2 Available Labeling Tasks:
				each v in dataMap.labelTasks
					div(class="row")
						div(class="panel panel-default")

							div(class="panel-heading") 
								h4 
									Task #{v.taskId}: #{v.taskName}
										ul.list-unstyled
											li
												a.text-white(href="/json/" + v.taskId) JSON
											li
												a.text-white(href="/csv/" + v.taskId) CSV

							div(class="panel-body")
								p Elements to Label: #{v.eCount}
								p Labels Provided: #{v.labelCount}
								p #{v.question}

			if dataMap.rangeTasks.length > 0
				h2 Available Range-Based Tasks:
				each v in dataMap.rangeTasks
					div(class="row")
						div(class="panel panel-default")

							div(class="panel-heading") 
								h4 
									Task #{v.taskId}: #{v.taskName}
										ul.list-unstyled
											li
												a.text-white(href="/json/" + v.taskId) JSON
											li
												a.text-white(href="/csv/" + v.taskId) CSV

							div(class="panel-body")
								p Ranges to Label: #{v.eCount}
								p Range Decisions Provided: #{v.labelCount}
								p #{v.question}


		include includes/jsFooter.pug